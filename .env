# ====================
# CONFIGURACIÃ“N GENERAL
# ====================
COMPOSE_PROJECT_NAME=example

# ====================
# SSL / CERTBOT
# ====================
SSL_EMAIL=webadmin@example.com.pe
SSL_DOMAINS=example.local

# ====================
# MYSQL / DATABASE
# ====================
MYSQL_ROOT_PASSWORD=abc123
MYSQL_DATABASE=example_db
MYSQL_USER=example_user
MYSQL_PASSWORD=abc123

# Base de datos adicional para Maestro (opcional)
MYSQL_DATABASE_MAESTRO=maestro_db
MYSQL_USER_MAESTRO=maestro_user
MYSQL_PASSWORD_MAESTRO=abc123

# ====================
# MYSQL CONFIGURATION
# ====================
MYSQL_MAX_CONNECTIONS=200
MYSQL_MAX_ALLOWED_PACKET=256M
MYSQL_INNODB_BUFFER_POOL_SIZE=1G

# ====================
# TIMEZONE
# ====================
TZ=America/Lima

# ====================
# PUERTOS
# ====================
HTTP_PORT=80
HTTPS_PORT=443
MYSQL_PORT=3306
PHPMYADMIN_PORT=8080

# ====================
# PHPMYADMIN
# ====================
PMA_UPLOAD_LIMIT=512M

# ====================
# LARAVEL / PHP (opcional)
# ====================
APP_ENV=production
APP_DEBUG=false
APP_KEY=

# ====================
# RUTAS LOCALES
# ====================
LOCAL_HTML_PATH=./html
LOCAL_VHOSTS_PATH=./vhosts
LOCAL_MYSQL_CONFIG_PATH=./mysql-config
LOCAL_MYSQL_INIT_PATH=./mysql-init